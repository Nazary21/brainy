# Brainy Environment Configuration Example
# Copy this file to .env and fill in the values

# API Keys
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
OPENAI_API_KEY=your_openai_api_key_here
GROK_API_KEY=your_grok_api_key_here

# AI Provider settings
DEFAULT_AI_PROVIDER=openai
OPENAI_MODEL=gpt-3.5-turbo  # or gpt-4, gpt-4o if you have access
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=1000

# Database (optional for MVP)
# DATABASE_URL=postgresql://user:password@localhost:5432/brainy

# Vector DB
VECTOR_DB_PATH=/data/vectordb

# Memory settings
USE_CONTEXT_SEARCH=True
MAX_CONTEXT_MESSAGES=10
MAX_SIMILAR_MESSAGES=3

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# Application settings
DEBUG=True

# Railway (for deployment)
# RAILWAY_PROJECT_ID=your_railway_project_id 